<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:layout_marginTop="3dp"

    android:elevation="5dp"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="3dp">


        <TextView
            android:id="@+id/tv_drive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="3dp"
            android:text="Drive Name" />


        <TextView
            android:id="@+id/tv_drive_label"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/tv_drive_name"
            android:padding="3dp"
            android:text="Drive label" />

        <TextView
            android:id="@+id/tv_drive_type"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/tv_drive_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"

            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:text="Type: "
            />

        <TextView
            android:id="@+id/tv_drive_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_drive_label"
            android:layout_margin="5dp"

            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_drive_type"
            android:padding="3dp"

            android:text="Format: " />

        <LinearLayout
            android:id="@+id/show_directory"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_below="@+id/tv_drive_format"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>



